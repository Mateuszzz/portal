<% provide(:title, "Login in") %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_tag '/login' do %>
      
      <div class="form-inputs">   
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      
        <%= label_tag :password %>
        <%= password_field_tag :password %>    
      </div>
      
      <div class="form-actions">
        <%= submit_tag "Submit", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>